extends  ../layout
block content
    .container
        .row
            .col-md-7
                embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd= movie.title
                    dt 导演
                    dd= movie.doctor
                    dt 上映地区
                    dd= movie.country
                    dt 上映时间
                    dd= movie.year
                    dt 语言
                    dd= movie.language
                    dt 介绍
                    dd= movie.summary
